;;;omg

# Import modules for utility functions and math operations
import "./modules/math.omg" as math
import "./modules/utils.omg" as utils

# Compose full message combining factorial and greeting
proc message(name, num) {
    alloc factorial := math.factorial(num)
    alloc greeting := utils.greeting(name)

    return greeting + ", the factorial of " + num + " is " + factorial
}

# Output
emit message("Chris", 5)